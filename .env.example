# Travel Planner Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# AeroDataBox Flight API (via RapidAPI)
# Sign up at: https://rapidapi.com/aedbx-aedbx/api/aerodatabox
# Free tier: 600 API units/month, 2400 requests/month
# Supports flights up to 365 days ahead
# =============================================================================
AERODATABOX_API_KEY=your_rapidapi_key_here
AERODATABOX_HOST=aerodatabox.p.rapidapi.com

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_WEATHER=100
RATE_LIMIT_MAX_FLIGHTS=50
RATE_LIMIT_MAX_ROUTING=200

# =============================================================================
# Server Configuration (used by adapter-node)
# =============================================================================
PORT=3000
HOST=0.0.0.0
ORIGIN=http://localhost:3000

# =============================================================================
# Database Configuration
# Use absolute path for Docker deployment to match Dockerfile's /app/data
# =============================================================================
DATABASE_PATH=/app/data/cache.db
