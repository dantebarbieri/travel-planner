# Travel Planner Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Flight API (placeholder - add your key when you choose an API)
# Options: Amadeus, AeroDataBox, FlightAware, etc.
# =============================================================================
FLIGHT_API_KEY=your_flight_api_key_here

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_WEATHER=100
RATE_LIMIT_MAX_FLIGHTS=50
RATE_LIMIT_MAX_ROUTING=200

# =============================================================================
# Server Configuration (used by adapter-node)
# =============================================================================
PORT=3000
HOST=0.0.0.0
ORIGIN=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=./data/cache.db
